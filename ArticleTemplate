\usepackage[MnSymbol]{mathspec} % includes fontspec
\usepackage[math-style=TeX]{unicode-math}

\defaultfontfeatures{Scale=MatchLowercase,Numbers={Lining,Proportional}}
\setmainfont[Renderer=Basic,Ligatures=TeX]{Garamond} 
\newfontfamily\titlefont[]{Helvetica Neue Thin}
\setsansfont{Helvetica Neue Thin}
%\setmonofont[Scale=0.95]{Inconsolata}
%\setmathfont{xits-math.otf}
\setmathsfont[Set=Greek,Uppercase=Italic,Lowercase=Italic]{Helvetica Neue Thin}
	
\usepackage{microtype}

%author info
\def\myaffiliation{} % <- insert your affiliation
\def\myauthor{} % <- insert your author names
\def\myemail{\small{\texttt{\href{}{}}}} % <- insert your emails
\def\mytitle{} % < - insert article title
\def\mykeywords{} % < - insert keywords

%hyperlinks
\usepackage[usenames,dvipsnames]{xcolor}                     
\usepackage[xetex, 
	colorlinks=true,
	urlcolor=Mahogany, % external links
        citecolor=RoyalBlue, % citations
        filecolor=BlueViolet, % local files
	plainpages=false,
  	pdfpagelabels,
  	bookmarksnumbered,
  	pdftitle={\mytitle},
  	pdfauthor={\myauthor},
  	pdfkeywords={\mykeywords}
  	]{hyperref}  
	
%track changes
\usepackage[]{changes}%insert final into option to generate finalized version
\definechangesauthor[name={}, color=orange]{} % \definechangesauthor[name={YOUR NAME}, color=orange]{YOUR INITIALS}
\setremarkmarkup{(#2)}

